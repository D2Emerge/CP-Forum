{
  "family": "forum-nodebb-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::343218197585:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::343218197585:role/ecsTaskRole",
  "volumes": [
    {
      "name": "nodebb-config",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-040464c77579387a9",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-018da5cda3e607c75"
        }
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "forum-nodebb-container",
      "image": "343218197585.dkr.ecr.us-east-1.amazonaws.com/forum-nodebb-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 4567,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nodebb-config",
          "containerPath": "/opt/config",
          "readOnly": false
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "4567" },
        { "name": "SITE_URL", "value": "https://forum.codeproject.com" },
        { "name": "FORCE_HTTPS", "value": "true" },
        { "name": "TRUST_PROXY", "value": "true" },
        { "name": "DOMAIN", "value": "forum.codeproject.com" },
        { "name": "DAEMON", "value": "false" },
        { "name": "SILENT", "value": "false" },
        { "name": "START_BUILD", "value": "true" },
        { "name": "PACKAGE_MANAGER", "value": "npm" },
        {
          "name": "DEBUG_MODE",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "NODEBB_DB_HOST",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/db/host"
        },
        {
          "name": "NODEBB_DB_PORT",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/db/port"
        },
        {
          "name": "NODEBB_DB_USER",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/db/username"
        },
        {
          "name": "NODEBB_DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:343218197585:secret:forum-nodebb/docdb-password-IxTJZq"
        },
        {
          "name": "NODEBB_DB_NAME",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/db/name"
        },
        {
          "name": "NODEBB_DB_SSL",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/db/ssl"
        },
        {
          "name": "NODEBB_ADMIN_USERNAME",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/admin/username"
        },
        {
          "name": "NODEBB_ADMIN_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/admin/password"
        },
        {
          "name": "NODEBB_ADMIN_EMAIL",
          "valueFrom": "arn:aws:ssm:us-east-1:343218197585:parameter/forum-nodebb/admin/email"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/forum-nodebb",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-datetime-format": "%Y-%m-%d %H:%M:%S"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:4567/ || curl -f http://localhost:4567/api || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 240
      },
      "stopTimeout": 120,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        },
        {
          "name": "nproc",
          "softLimit": 32768,
          "hardLimit": 32768
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      }
    }
  ]
}
